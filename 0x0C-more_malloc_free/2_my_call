#include "main.h"
#include <stdio.h>
#include <stdlib.h>
/**
 * string_nconcat - function concatenates strings s1 and s2
 *
 * @s1: first string to be concatenated
 * @s2: second string to be concatenated
 * @n: counter
 *
 * Return: Pointer
 *
 */
char *string_nconcat(char *s1, char *s2, unsigned int n)
{
	int i;
	char *ptr;

	if (ptr == NULL)
		exit('NULL');
	if (n >= strlen(s2))
	{
		ptr = malloc(s1 + s2);
		s1 = (s1 + s2);
		return (ptr);
	}
	if (s1 | s2 == NULL)
	{
		ptr = malloc(2);
		s1 = _putchar(" ");
		return (ptr);
	}
	for (i = 0, i < n, i++)
	{
		ptr = malloc(s1 + (i + 1))
		s1 = s1 + s2[i];
		return (ptr);
	}
}
